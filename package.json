{
  "name": "aws-auto-refresh",
  "version": "1.0.0",
  "description": "Automatically refresh AWS SSO tokens in the background",
  "main": "src/index.js",
  "types": "index.d.ts",
  "scripts": {
    "start": "node src/index.js",
    "dev": "LOG_LEVEL=debug node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs aws-sso-refresh",
    "pm2:status": "pm2 status aws-sso-refresh"
  },
  "keywords": [
    "aws",
    "sso",
    "token",
    "refresh",
    "daemon",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "node-notifier": "^10.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "write-file-atomic": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "jest": "^29.7.0",
    "pm2": "^5.3.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
